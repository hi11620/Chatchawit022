<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_nan"
        android:layout_width="73dp"
        android:layout_height="39dp"
        android:text="@string/btn_nan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_Thammarat"
        app:layout_constraintStart_toEndOf="@+id/btn_buri"
        app:layout_constraintTop_toBottomOf="@+id/text_c" />

    <TextView
        android:id="@+id/text__J"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="เลือกจังหวัด"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_img"
        app:layout_constraintVertical_bias="0.037" />

    <ImageView
        android:id="@+id/img_img"
        android:layout_width="414dp"
        android:layout_height="270dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ayutthaya" />

    <TextView
        android:id="@+id/text_c"
        android:layout_width="358dp"
        android:layout_height="255dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text__J"
        app:layout_constraintVertical_bias="0.147" />

    <Button
        android:id="@+id/btn_ayutthaya"
        android:layout_width="73dp"
        android:layout_height="39dp"
        android:text="@string/btn_ayutthaya"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/text_c"
        app:layout_constraintTop_toBottomOf="@+id/text_c" />

    <Button
        android:id="@+id/btn_Thammarat"
        android:layout_width="120dp"
        android:layout_height="37dp"
        android:text="@string/btn_Thammarat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/text_c"
        app:layout_constraintTop_toBottomOf="@+id/text_c" />

    <Button
        android:id="@+id/btn_buri"
        android:layout_width="75dp"
        android:layout_height="37dp"
        android:layout_marginStart="8dp"
        android:text="@string/btn_buri"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_ayutthaya"
        app:layout_constraintTop_toBottomOf="@+id/text_c"
        app:layout_constraintVertical_bias="0.494" />

</androidx.constraintlayout.widget.ConstraintLayout>